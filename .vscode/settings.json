{
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  
  // 기본 경로 자동완성 비활성화 (Path Intellisense만 사용)
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,

  // Path Intellisense 설정
  "path-intellisense.extensionOnImport": true, // import 시 확장자까지 자동완성
  "path-intellisense.showHiddenFiles": true, // 숨김 파일도 자동완성
  "path-intellisense.autoSlashAfterDirectory": true, // 폴더 뒤에 / 자동 추가
  "path-intellisense.absolutePathToWorkspace": true, // 절대경로를 워크스페이스 기준으로
  "path-intellisense.ignoreTsConfigBaseUrl": false, // jsconfig/tsconfig의 baseUrl, paths를 사용
}